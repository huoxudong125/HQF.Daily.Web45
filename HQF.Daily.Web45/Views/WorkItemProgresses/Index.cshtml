            @Html.DisplayFor(modelItem => item.CurrentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkItemPrice.WorkTeam.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkItemPrice.WorkItem.Name)
        </td>   
        <td>
            @Html.DisplayFor(modelItem => item.WorkQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkItemPrice.WorkTypeUnit.WorkUnit.Name)
        </td>
